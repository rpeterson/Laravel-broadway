{
  "name": "nwidart/laravel-broadway",
  "description": "A Laravel adapter for the Broadway ES/CQRS package.",
  "license": "MIT",
  "keywords": [
    "laravel",
    "broadway",
    "event sourcing",
    "ES",
    "CQRS",
    "Domain Driven Design",
    "DDD"
  ],
  "authors": [
    {
      "name": "Nicolas Widart",
      "email": "n.widart@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "doctrine/dbal": "~2.5",
    "broadway/broadway": "0.9"
  },
  "require-dev": {
    "phpunit/phpunit": "4.0"
  },
  "autoload": {
    "psr-4": {
      "Nwidart\\LaravelBroadway\\": "src/"
    }
  },
  "suggest": {
    "elasticsearch/elasticsearch": "For persisting read models"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
